rm(NDVI.aov, SIPI.aov, CARI.aov, CIG.aov, CIred.aov, CIgreen.aov, VARI.aov)

#Effect size plot (Forest plot)

Cohen <- vector(mode = "list", length = 7)
Cohen.CI <- vector(mode = "list", length = 7)
Cohen.low <- vector(mode = "list", length = 7)
Cohen.high <- vector(mode = "list", length = 7)

for (i in 308:314){
  Cohen[[i-307]] <- cohens_d(data.ag[[i]][,1])
  Cohen.CI[i-307] <- Cohen[[i-307]][["Cohens_d"]]
  Cohen.low[i-307] <- Cohen[[i-307]][["CI_low"]]
  Cohen.high[i-307] <- Cohen[[i-307]][["CI_high"]]
}

FP <- data.frame(Index = c("NDVI", "SIPI", "CARI","CIG", "CIred-edge", "CIgreen", "VARI"),
                 CI = as.numeric(Cohen.CI), 
                 High = as.numeric(Cohen.high), 
                 Low = as.numeric(Cohen.low),
                 Order = c(1:7))

ggplot(data = FP, aes(y = Order, x = CI,
                      xmax = High, xmin = Low)) +
  geom_point() + 
  geom_errorbarh(height=.1) +
  scale_y_continuous(breaks = 1:nrow(FP), labels = FP$Index) +
  labs(title = "", 
       x = "Effect Size", 
       y = "Index") +
  theme_light()

cohens_d(data.ag$VARI[,1])
