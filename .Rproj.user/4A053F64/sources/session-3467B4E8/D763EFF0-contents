LSD.test(CIred.aov,"Tissue",console = TRUE)
LSD.test(CIred.aov,"Time",console = TRUE)
LSD.test(CIred.aov,"Variety",console = TRUE)


CIgreen.aov <- aov(CIgreen[,1] ~ Time + Tissue + Variety + Plant, data = data.ag)
